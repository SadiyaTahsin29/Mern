  <script>
    // Minimal, dependency-free JS: required-field validation + friendly toast
    const form = document.getElementById('eds-form');
    const toast = document.getElementById('toast');
    const year = document.getElementById('year');
    year.textContent = new Date().getFullYear();

    function showToast(message, ok=true){
      toast.textContent = message;
      toast.className = 'toast' + (ok ? '' : ' error');
      toast.style.display = 'block';
      toast.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }

    function validateEmail(value){
      return /^[^\s@]+@[^\s@]+\.[^\s@]{2,}$/.test(value);
    }

    function validatePhone(value){
      return /^[6-9]\d{9}$/.test(value);
    }

    form.addEventListener('submit', (e)=>{
      e.preventDefault();
      const data = Object.fromEntries(new FormData(form).entries());

      if(!data.name || !data.email || !data.phone || !data.program || !data.track || !data.location || !form.consent.checked){
        showToast('Please fill all required fields and accept the consent.', false); return;
      }
      if(!validateEmail(data.email)){
        showToast('Please enter a valid email address.', false); return;
      }
      if(!validatePhone(data.phone)){
        showToast('Phone must be a 10-digit Indian mobile number starting with 6–9.', false); return;
      }

      // Simulate submit: store to localStorage so it survives a refresh (demo only)
      const submissions = JSON.parse(localStorage.getItem('edverciity_submissions')||'[]');
      submissions.push({ ...data, submittedAt: new Date().toISOString() });
      localStorage.setItem('edverciity_submissions', JSON.stringify(submissions));

      showToast(`Thanks, ${data.name}! Your ${data.program.toLowerCase()} enquiry for “${data.track}” at ${data.location} was received. We’ll get back to you soon.`);
      form.reset();
      form.name.focus();
    });

    // Enhance: auto-format tel to digits only
    const phone = document.getElementById('phone');
    phone.addEventListener('input', ()=>{
      phone.value = phone.value.replace(/[^\d]/g, '').slice(0,10);
    });
  </script>
